<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEW CUSTOMER SCREEN"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10pt"
        android:gravity="center_horizontal"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/activity_new_customer_cno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Customer Number"/>
            <EditText
                android:id="@+id/activity_new_customer_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Name"/>
            <EditText
                android:id="@+id/activity_new_customer_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile number"/>

            <EditText
                android:id="@+id/activity_new_customer_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reference"/>

            <EditText
                android:id="@+id/activity_new_customer_office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Office number"/>
            <EditText
                android:id="@+id/activity_new_customer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"/>
            <EditText
                android:id="@+id/activity_new_customer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MEASUREMENTS"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10pt"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/newpantwrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/activity_new_customer_pant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PANT"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/newshirtwrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/activity_new_customer_shirt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SHIRT"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/newcoatwrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/activity_new_customer_coat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="COAT"/>
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
